<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".haifares">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/yanyanchineserestauranthaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/yanyanchineserestauranthaifa" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/yanyanhaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <ImageView
            android:id="@+id/douzanhaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/douzanhaifa" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/douzanhaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location" />

        <ImageView
            android:id="@+id/haledadawihaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/haledadawihaifa" />

        <TextView
            android:id="@+id/haledadawihaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:text="location" />

        <ImageView
            android:id="@+id/luxhaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/luxhaifa" />

        <TextView
            android:id="@+id/luxhaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/minnatomeihaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/minnatomeihaifa" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/minnatomeihaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location" />

        <ImageView
            android:id="@+id/rafaellohaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/raffaellohaifa" />

        <TextView
            android:id="@+id/rafaellohaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/venyabistrohaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/venyabistrohaifa" />

        <TextView
            android:id="@+id/venyabistrohaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/vivinohaifa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/vivinohaifa" />

        <TextView
            android:id="@+id/vivinohaifatext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="location"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/goback4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="go back" />
    </LinearLayout>
</ScrollView>